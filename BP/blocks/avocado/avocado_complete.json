{
	"format_version": "1.16.100",
	"minecraft:block": {
		"description": {
			"identifier": "exdrill:avocado_crop_complete"
		},
		"components": {
			"minecraft:block_light_absorption": 0,
			"minecraft:destroy_time": 0,
			"minecraft:entity_collision": false,
			"minecraft:loot": "loot_tables/blocks/avocado/avocado.json",
			"minecraft:geometry": "geometry.cross_crop",
			"minecraft:on_placed": {
				"event": "on_placed",
				"target": "self"
			},
			"minecraft:breathability": "air",
			"minecraft:material_instances": {
				"*": {
					"texture": "avocado_4",
					"face_dimming": false,
					"render_method": "alpha_test",
					"ambient_occlusion": false
				}
			},
			"minecraft:pick_collision": {
				"origin": [ -7, 0, -7 ],
				"size": [ 14, 14, 14 ]
			},
			"minecraft:placement_filter": {
				"conditions": [
					{
						"allowed_faces": [
							"up"
						],
						"block_filter": [
							"minecraft:farmland",
							"exdrill:planter_box"
						]
					}
				]
			},
			"minecraft:on_player_destroyed": {
				"event": "destroy",
				"target": "self"
			},
			"tag:exdrill:fully_grown_crop": {}
		},
		"events": {
			"on_placed": {
				"sequence": [
					{
						"run_command": {
							"command": [
								"particle exdrill:crop_alert",
								"playsound note.bit @a ~ ~ ~ 0.2"
							]
						}
					}
				]
			},
			"destroy": {
				"sequence": [
					{
						"spawn_loot": {
							"table": "loot_tables/blocks/avocado/avocado_bonus.json"
						},
						"condition": "query.block_neighbor_has_any_tag( 0, -1, 0, 'exdrill:planter_box')"
					}
				]
			}
		}
	}
}