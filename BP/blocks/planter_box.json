					},
					// East and West
					{
						"set_block_property": {
							"exdrill:top_face_adjustment": 1
						},
						"condition": "query.block_neighbor_has_any_tag( 0, 0, 1, 'exdrill:planter_box') && query.block_neighbor_has_any_tag( 0, 0, -1, 'exdrill:planter_box') ? query.block_property('exdrill:direction') == 4 || query.block_property('exdrill:direction') == 5"
					},
					{
						"set_block_property": {
							"exdrill:top_face_adjustment": 3
						},
						"condition": "query.block_neighbor_has_any_tag( 0, 0, -1, 'exdrill:planter_box') && !query.block_neighbor_has_any_tag( 0, 0, 1, 'exdrill:planter_box') ? query.block_property('exdrill:direction') == 4 || query.block_property('exdrill:direction') == 5"
					},
					{
						"set_block_property": {
							"exdrill:top_face_adjustment": 2
						},
						"condition": "query.block_neighbor_has_any_tag( 0, 0, 1, 'exdrill:planter_box') && !query.block_neighbor_has_any_tag( 0, 0, -1, 'exdrill:planter_box') ? query.block_property('exdrill:direction') == 4 || query.block_property('exdrill:direction') == 5"
