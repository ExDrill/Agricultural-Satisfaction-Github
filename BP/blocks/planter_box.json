					{
						"set_block_property": {
							"exdrill:direction": "query.cardinal_facing_2d"
						}
					}
				]
			},
			"adjust": {
				"sequence": [
					// North and South
					{
						"set_block_property": {
							"exdrill:top_face_adjustment": 1
						},
						"condition": "query.block_neighbor_has_any_tag( 1, 0, 0, 'exdrill:planter_box') && query.block_neighbor_has_any_tag( -1, 0, 0, 'exdrill:planter_box') ? query.block_property('exdrill:direction') == 2 || query.block_property('exdrill:direction') == 3"
					},
					{
						"set_block_property": {
							"exdrill:top_face_adjustment": 3
						},
						"condition": "query.block_neighbor_has_any_tag( -1, 0, 0, 'exdrill:planter_box') && !query.block_neighbor_has_any_tag( 1, 0, 0, 'exdrill:planter_box') ? query.block_property('exdrill:direction') == 2 || query.block_property('exdrill:direction') == 3"
					},
					{
						"set_block_property": {
							"exdrill:top_face_adjustment": 2
						},
