{
	"format_version": "1.17.30",
	"minecraft:block": {
		"description": {
			"identifier": "exdrill:blender",
			"properties": {
				"exdrill:direction": [
					2,
					3,
					4,
					5
				],
				"exdrill:filled_with": [
					// None
					0,
					// Apple
					1
				]
			}
		},
		"components": {
			"minecraft:destroy_time": 0.5,
			"minecraft:block_light_absorption": 0,
			"minecraft:geometry": "geometry.blender",
			"minecraft:breathability": "air",
			"minecraft:pick_collision": {
				"origin": [ -5, 0, -5 ],
				"size": [ 10, 16, 10 ]
			},
			"minecraft:entity_collision": {
				"origin": [ -5, 0, -5 ],
				"size": [ 10, 16, 10 ]
			},
			"minecraft:creative_category": {
				"category": "items"
			},
			"minecraft:on_player_placing": {
				"event": "on_player_placed",
				"target": "self"
			}
		},
		"permutations": [
			{
				"condition": "query.block_property('exdrill:direction') == 2",
				"components": {
					"minecraft:rotation": [ 0, -180, 0 ]
				}
			},
			{
				"condition": "query.block_property('exdrill:direction') == 3",
				"components": {
					"minecraft:rotation": [ 0, 0, 0 ]
				}
			},
			{
				"condition": "query.block_property('exdrill:direction') == 4",
				"components": {
					"minecraft:rotation": [ 0, -90, 0 ]
				}
			},
			{
				"condition": "query.block_property('exdrill:direction') == 5",
				"components": {
					"minecraft:rotation": [ 0, -270, 0 ]
				}
			},
			{
				// Filled with Nothing
				"condition": "query.block_property('exdrill:filled_with') == 0",
				"components": {
					"minecraft:on_interact": {
						"event": "on_interact",
						"target": "self"
					},
					"minecraft:material_instances": {
						"*": {
							"texture": "blender",
							"render_method": "blend"
						}
					}
				}
			},
			{
				// Filled with Apple Cider
				"condition": "query.block_property('exdrill:filled_with') == 1",
				"components": {
					"minecraft:on_interact": {
						"event": "apple_cider_interact",
						"target": "self"
					},
					"minecraft:material_instances": {
						"*": {
							"texture": "blender_apple_cider",
							"render_method": "blend"
						}
					}
				}
			}
		],
		"events": {
			"on_player_placed": {
				"set_block_property": {
					"exdrill:direction": "query.cardinal_facing_2d"
				}
			},
			"on_interact": {
				"sequence": [
					{
						"set_block_property": {
							"exdrill:filled_with": 1
						},
						"run_command": {
							"command": [
								"playsound blender.blend @a ~ ~ ~"
							],
							"target": "self"
						},
						"condition": "query.get_equipped_item_name(0) == 'apple'"
					}
				]
			},
			"apple_cider_interact": {
				"set_block_property": {
					"exdrill:filled_with": 0
				},
				"decrement_stack": {},
				"run_command": {
					"command": [
						"playsound cauldron.takepotion",
						"gamerule sendcommandfeedback false",
						"give @s exdrill:apple_cider 1",
						"gamerule sendcommandfeedback true"
					],
					"target": "other"
				}
			}
		}
	}
}