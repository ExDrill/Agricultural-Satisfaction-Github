{
	"format_version": "1.16.100",
	"minecraft:block": {
		"description": {
			"identifier": "exdrill:tomato_crop",
			"properties": {
				"exdrill:growth": [ 0, 1, 2, 3 ],
				"exdrill:geometry": [
					0,
					1
				]
			}
		},
		"components": {
			"minecraft:block_light_absorption": 0,
			"minecraft:destroy_time": 0,
			"minecraft:entity_collision": false,
			"minecraft:random_ticking": {
				"on_tick": {
					"event": "on_grow",
					"target": "self",
					"condition": "query.block_property('exdrill:growth') < 3"
				}
			},
			"minecraft:loot": "loot_tables/blocks/tomato_crop_incomplete.json",
			"minecraft:geometry": "geometry.crop",
			"minecraft:on_placed": {
				"event": "on_placed",
				"target": "self",
				"condition": "query.block_property('exdrill:growth') == 0"
			},
			"minecraft:placement_filter": {
				"conditions": [
					{
						"allowed_faces": [
							"up"
						],
						"block_filter": [
							"minecraft:farmland",
							"exdrill:planter_box"
						]
					}
				]
			},
			"minecraft:on_interact": {
				"event": "fertilize",
				"target": "self",
				"condition": "query.block_property('exdrill:growth') < 3"
			},
			"minecraft:on_player_destroyed": {
				"event": "destroy",
				"target": "self"
			}
		},
		"permutations": [
			{
				"condition": "query.block_property('exdrill:growth') == 0",
				"components": {
					"minecraft:material_instances": {
						"*": {
							"texture": "tomato_crop_1",
							"render_method": "alpha_test",
							"ambient_occlusion": false,
							"face_dimming": true
						}
					},
					"minecraft:pick_collision": {
						"origin": [ -7, 0, -7 ],
						"size": [ 14, 4, 14 ]
					}
				}
			},
			{
				"condition": "query.block_property('exdrill:growth') == 1",
				"components": {
					"minecraft:material_instances": {
						"*": {
							"texture": "tomato_crop_2",
							"render_method": "alpha_test",
							"ambient_occlusion": false,
							"face_dimming": true
						}
					},
					"minecraft:pick_collision": {
						"origin": [ -7, 0, -7 ],
						"size": [ 14, 10, 14 ]
					}
				}
			},
			{
				"condition": "query.block_property('exdrill:growth') == 2",
				"components": {
					"minecraft:material_instances": {
						"*": {
							"texture": "tomato_crop_3",
							"render_method": "alpha_test",
							"ambient_occlusion": false,
							"face_dimming": true
						}
					},
					"minecraft:pick_collision": {
						"origin": [ -7, 0, -7 ],
						"size": [ 14, 10, 14 ]
					}
				}
			},
			{
				"condition": "query.block_property('exdrill:growth') == 3",
				"components": {
					"minecraft:material_instances": {
						"*": {
							"texture": "tomato_crop_4",
							"render_method": "alpha_test",
							"ambient_occlusion": false,
							"face_dimming": true
						}
					},
					"minecraft:pick_collision": {
						"origin": [ -7, 0, -7 ],
						"size": [ 14, 14, 14 ]
					},
					"minecraft:loot": "loot_tables/blocks/tomato_crop.json"
				}
			},
			{
				"condition": "query.block_property('exdrill:geometry') == 0",
				"components": {}
			},
			{
				"condition": "query.block_property('exdrill:geometry') == 1",
				"components": {
					"minecraft:geometry": "geometry.crop_planter_box"
				}
			}
		],
		"events": {
			"on_grow": {
				"randomize": [
					{
						"set_block_property": {
							"exdrill:growth": "query.block_property('exdrill:growth') + 1"
						},
						"weight": 2
					},
					{
						"weight": 1
					}
				]
			},
			"on_placed": {
				"sequence": [
					{
						"run_command": {
							"command": [
								"playsound dig.grass @a ~ ~ ~"
							],
							"target": "self"
						}
					},
					{
						"set_block_property": {
							"exdrill:geometry": 1
						},
						"condition": "query.block_neighbor_has_any_tag(0, -1, 0, 'exdrill:planter_box')"
					}
				]
			},
			"destroy": {
				"sequence": [
					{
						"spawn_loot": {
							"table": "loot_tables/blocks/tomatoes_bonus.json"
						},
						"condition": "query.block_neighbor_has_any_tag( 0, -1, 0, 'exdrill:planter_box')"
					}
				]
			},
			"fertilize": {
				"sequence": [
					{
						"randomize": [
							{
								"set_block_property": {
									"exdrill:growth": "query.block_property('exdrill:growth') + 1"
								},
								"run_command": {
									"command": [
										"particle minecraft:crop_growth_emitter ~ ~ ~",
										"playsound item.bone_meal.use @a ~ ~ ~"
									],
									"target": "self"
								},
								"decrement_stack": {},
								"weight": 1
							},
							{
								"run_command": {
									"command": [
										"particle minecraft:crop_growth_emitter ~ ~ ~",
										"playsound item.bone_meal.use @a ~ ~ ~"
									],
									"target": "self"
								},
								"decrement_stack": {},
								"weight": 2
							}
						],
						"condition": "query.get_equipped_item_name=='bone_meal'"
					}
				]
			}
		}
	}
}