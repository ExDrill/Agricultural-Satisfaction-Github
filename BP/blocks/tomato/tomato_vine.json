{
	"format_version": "1.19.0",
	"minecraft:block": {
		"description": {
			"identifier": "exdrill:tomato_vine",
			"properties": {
				"exdrill:growth": [ 0, 1, 2, 3, 4 ]
			}
		},
		"components": {
			"minecraft:block_light_filter": 0,
			"minecraft:destroy_time": 0,
			"minecraft:block_collision": false,
			"minecraft:random_ticking": {
				"on_tick": {
					"event": "on_grow",
					"target": "self",
					"condition": "query.block_property('exdrill:growth') < 4"
				}
			},
			"minecraft:loot": "loot_tables/blocks/tomato/tomato_crop_incomplete.json",
			"minecraft:geometry": "geometry.crop",
			"minecraft:placement_filter": {
				"conditions": [
					{
						"allowed_faces": [
							"down"
						],
						"block_filter": [
							"exdrill:rich_soil",
							"farmland",
							"dirt"
						]
					}
				]
			},
			"minecraft:on_interact": {
				"event": "fertilize",
				"target": "self",
				"condition": "query.block_property('exdrill:growth') < 4"
			}
		},
		"permutations": [
			{
				"condition": "query.block_property('exdrill:growth') == 0",
				"components": {
					"minecraft:material_instances": {
						"*": {
							"texture": "tomato_vine_0",
							"render_method": "alpha_test",
							"ambient_occlusion": false,
							"face_dimming": false
						}
					},
					"minecraft:aim_collision": {
						"origin": [ -7, 10, -7 ],
						"size": [ 14, 6, 14 ]
					}
				}
			},
			{
				"condition": "query.block_property('exdrill:growth') == 1",
				"components": {
					"minecraft:material_instances": {
						"*": {
							"texture": "tomato_vine_1",
							"render_method": "alpha_test",
							"ambient_occlusion": false,
							"face_dimming": false
						}
					},
					"minecraft:aim_collision": {
						"origin": [ -7, 10, -7 ],
						"size": [ 14, 6, 14 ]
					}
				}
			},
			{
				"condition": "query.block_property('exdrill:growth') == 2",
				"components": {
					"minecraft:material_instances": {
						"*": {
							"texture": "tomato_vine_2",
							"render_method": "alpha_test",
							"ambient_occlusion": false,
							"face_dimming": false
						}
					},
					"minecraft:aim_collision": {
						"origin": [ -7, 10, -7 ],
						"size": [ 14, 6, 14 ]
					}
				}
			},
			{
				"condition": "query.block_property('exdrill:growth') == 3",
				"components": {
					"minecraft:material_instances": {
						"*": {
							"texture": "tomato_vine_3",
							"render_method": "alpha_test",
							"ambient_occlusion": false,
							"face_dimming": false
						}
					},
					"minecraft:aim_collision": {
						"origin": [ -7, 10, -7 ],
						"size": [ 14, 6, 14 ]
					}
				}
			},
			{
				"condition": "query.block_property('exdrill:growth') == 4",
				"components": {
					"minecraft:material_instances": {
						"*": {
							"texture": "tomato_vine_4",
							"render_method": "alpha_test",
							"ambient_occlusion": false,
							"face_dimming": false
						}
					},
					"minecraft:aim_collision": {
						"origin": [ -7, 10, -7 ],
						"size": [ 14, 6, 14 ]
					},
					"minecraft:loot": "loot_tables/blocks/tomato/tomato_crop.json",
					"minecraft:ticking": {
						"looping": true,
						"range": [
							0.01, 0.02
						],
						"on_tick": {
							"event": "transform",
							"target": "self"
						}
					}
				}
			}
		],
		"events": {
			"on_grow": {
				"randomize": [
					{
						"set_block_property": {
							"exdrill:growth": "query.block_property('exdrill:growth') + 1"
						},
						"weight": 2
					},
					{
						"weight": 1
					}
				]
			},
			"fertilize": {
				"sequence": [
					{
						"randomize": [
							{
								"set_block_property": {
									"exdrill:growth": "query.block_property('exdrill:growth') + 1"
								},
								"run_command": {
									"command": [
										"particle minecraft:crop_growth_emitter ~ ~ ~",
										"playsound item.bone_meal.use @a ~ ~ ~"
									],
									"target": "self"
								},
								"decrement_stack": {},
								"weight": 1
							},
							{
								"run_command": {
									"command": [
										"particle minecraft:crop_growth_emitter ~ ~ ~",
										"playsound item.bone_meal.use @a ~ ~ ~"
									],
									"target": "self"
								},
								"decrement_stack": {},
								"weight": 1
							}
						],
						"condition": "query.get_equipped_item_name=='bone_meal'"
					}
				]
			},
			"transform": {
				"set_block": {
					"block_type": "exdrill:tomato_vine_complete"
				}
			}
		}
	}
}