{
	"format_version": "1.16.100",
	"minecraft:block": {
		"description": {
			"identifier": "exdrill:tomato_vine_complete"
		},
		"components": {
			"minecraft:block_light_absorption": 0,
			"minecraft:destroy_time": 0,
			"minecraft:entity_collision": false,
			"minecraft:loot": "loot_tables/blocks/tomato/tomato_crop.json",
			"minecraft:geometry": "geometry.crop",
			"minecraft:on_placed": {
				"event": "on_placed",
				"target": "self"
			},
			"minecraft:material_instances": {
				"*": {
					"texture": "tomato_vine_4",
					"face_dimming": false,
					"render_method": "alpha_test",
					"ambient_occlusion": false
				}
			},
			"minecraft:pick_collision": {
				"origin": [ -7, 2, -7 ],
				"size": [ 14, 14, 14 ]
			},
			"minecraft:placement_filter": {
				"conditions": [
					{
						"allowed_faces": [
							"down"
						],
						"block_filter": [
							"exdrill:rich_soil",
							"farmland",
							"dirt",
							"grass",
							"dirt_with_roots",
							"podzol",
							"mycelium"
						]
					}
				]
			},
			"minecraft:on_player_destroyed": {
				"event": "destroy",
				"target": "self"
			},
			"tag:exdrill:fully_grown_crop": {}
		},
		"events": {
			"on_placed": {
				"sequence": [
					{
						"run_command": {
							"command": [
								"particle exdrill:crop_alert",
								"playsound note.bit @a ~ ~ ~ -0.5"
							]
						}
					}
				]
			},
			"destroy": {
				"sequence": [
					{
						"spawn_loot": {
							"table": "loot_tables/blocks/tomato/tomatoes_bonus.json"
						},
						"condition": "query.block_neighbor_has_any_tag( 0, 1, 0, 'exdrill:rich_soil')"
					}
				]
			}
		}
	}
}